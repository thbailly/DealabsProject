{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<h2 class="text-center my-3">Inscription</h2>

{{ form_start(form) }}

    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-right">Nom d'utilisateur</label>
        {{ form_widget(form.username, { 'attr': {'class': 'col-sm-9 form-control', 'placeholder': 'Nom d\'utilisateur'} }) }}
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-right">Adresse mail</label>
        {{ form_widget(form.email, { 'attr': {'class': 'col-sm-9 form-control', 'placeholder': 'Adresse mail'} }) }}
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-right">Mot de passe</label>
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'col-sm-9 form-control', 'placeholder': 'Mot de passe'} }) }}
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label text-right">Confirmer mot de passe</label>
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'col-sm-9 form-control', 'placeholder': 'Confirmer mot de passe'} }) }}
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-lg" type="submit">S'enregistrer</button>
    </div>

{{ form_end(form) }}

{% endblock %}