
<div class="border-top border-secondary my-1"></div>
<h6 class="mx-1">Groupes:</h6>
<div style="display: flex; flex-direction: row">
    {% for group in groups %}
        <div class="pb-2 px-1">
            <a class="badge badge-pill badge-secondary"
               href="{{ path('group_deals', {'id' : group.id }) }}">{{ group.name }}</a>
        </div>
    {% endfor %}

    <div class="pb-2 px-1">
        <a class="badge badge-pill badge-secondary"
            href="{{ path('deal_addGroupView', {"dealid" : dealid}) }}">+</a>
    </div>
</div>
