{% extends 'base.html.twig' %}

{% block title %}Création alerte{% endblock %}

{% block body %}

<h2 class="text-center my-3">Formulaire de création d'une alerte</h2>
{{ form_start(form) }}

    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-right">Mot clé</label>
        {{ form_widget(form.keyword, { 'attr': {'class': 'col-sm-10 form-control', 'placeholder': 'Mot clé'} }) }}
    </div>
    
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-right">Note minimale</label>
        {{ form_widget(form.minimumLength, { 'attr': {'class': 'col-sm-10 form-control', 'placeholder': 'Note minimale'} }) }}
    </div>

    <div class="text-center">
        {{ form_widget(form.submit, { 'label': 'Créer un groupe', 'attr': {'class': 'btn btn-primary btn-lg'} }) }}
    </div>

{{ form_end(form) }}

{% endblock %}